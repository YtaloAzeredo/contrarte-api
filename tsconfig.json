{
  "compilerOptions": {  
    "target": "es2017",                                  
    "lib": ["es6"],
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,  
    "module": "commonjs",                                
    "rootDir": "./src",     
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],        
    "resolveJsonModule": true,     
    "allowJs": true,          
    "outDir": "./dist",                                   
    "removeComments": true,       
    "esModuleInterop": true,    
    "forceConsistentCasingInFileNames": true,      
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@routes/*": ["./src/routes/*"],
      "@configs/*": ["./src/configs/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
